<%layout('layouts/boilerplate')%>
    




    <h1>Edit Selected Project:</h1>

    <div style="margin-top: 20px;">
        <form action="/projects/<%=selectedProject._id%>?_method=PUT" method="post">

            <div class="mb-3">
                <label class="form-label" for="name">Project Name:</label>
                <input class="form-control" type="text" id="name" name="name" value="<%=selectedProject.name%>">
            </div>
    
            <div class="mb-3"
                <label class="form-label" for="address">Address:</label>
                <input class="form-control" type="text" id="address" name="address" value="<%=selectedProject.address%>">
            </div>
            <div class="mb-3"
            <label class="form-label" for="owner">Owner:</label>
            <input class="form-control" type="text" id="owner" name="owner" value="<%=selectedProject.owner%>">
        </div>
    
    
    
            <div class="mb-3">
                <label class="form-label" for="projectManager">Project Manager</label>
                <input  class="form-control" type="text" id="projectManager" name="projectManager" value="<%=selectedProject.projectManager%>">
            </div>
    
            <div class="mb-3">
                <label class="form-label" for="estimate">Estimate</label>
                <input  class="form-control" type="text" id="estimate" name="estimate" value="<%=selectedProject.estimate%>">
            </div>
    
            <div class="mb-3">
                <label class="form-label" for="collectedAmount">Collections</label>
                <input  class="form-control" type="text" id="collectedAmount" name="collectedAmount" value="<%=selectedProject.collectedAmount%>">
            </div>
    
            <div class="mb-3">
                <label class="form-label" for="changeOrder">Change Order</label>
                <input  class="form-control" type="text" id="changeOrder" name="changeOrder" value="<%=selectedProject.changeOrder%>">
            </div>
    
            
    
            <div class="mb-3">
                <button class="btn btn-success" type="submit">Submit Changes</button>
                
            </div>
        </form> 
    
    
    
    
    
    
    </div>
   
    
    
