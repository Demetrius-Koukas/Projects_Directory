<%layout('layouts/boilerplate')%>

    

    <h1>List with All Projects:</h1>

    <div style="margin-top: 20px;">

        <table class="table">
            <thead>
              
    
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Location</th>
                    <th scope="col">Owner</th>
                    <th scope="col">Estimate</th>
                    <th scope="col">Collections</th>
                    <th scope="col">Change Orders</th>
                    <th scope="col">Project Manager</th>
                    <th scope="col"></th>
                  </tr>
            
            </thead>
            
                
                    <%for(let project of projects){%>
                        
                        <tr>
                            <td><%=project.name%></td>
                            <td><%=project.address%></td>
                            <td><%=project.owner%></td>
                            <td><%=project.estimate%></td>
                            <td><%=project.collectedAmount%></td>
                            <td><%=project.changeOrder%></td>
                            <td><%=project.projectManager%></td>
                            
                            <td><a href="/projects/<%= project._id %>"><i class="fa-solid fa-pen-to-square"></i></a></td>
                            
                        </tr>
                <% } %>
                
            

    </div>

    



    
